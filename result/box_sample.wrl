#VRML V2.0 utf8
#PixelTexture example

Shape{
    appearance Appearance {
        texture ImageTexture {
            url "box_sample_1.png"
                repeatS FALSE
                repeatT FALSE
        }

    }
    geometry IndexedFaceSet {
        coord Coordinate {
            point [
            0  0   0                
            256 0 0
            256 0 331
            0 0 331
            ]
        }
        coordIndex [0, 1, 2, 3]
        texCoord TextureCoordinate{
            point[0 0, 1 0, 1 1, 0 1]
        }
    }
}

